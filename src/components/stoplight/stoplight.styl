.titlebar-close,
.titlebar-minimize,
.titlebar-fullscreen
	-webkit-app-region no-drag

.titlebar-stoplight:hover svg
	opacity 1

.titlebar-close,
.titlebar-minimize,
.titlebar-fullscreen 
	float right
	width 16px
	height 16px
	border-radius 50%
	margin 4px
	line-height 0

.titlebar-close svg,
.titlebar-minimize svg,
.titlebar-fullscreen svg
	width 8px
	height 8px
	margin-top 3px
	margin-left 3px
	opacity 0

.titlebar-close 
	border 1px solid #e2463f
	background-color #ff5f57

.titlebar-close:active 
	border-color #ad3934
	background-color #bf4943

.titlebar-minimize 
	border 1px solid #e1a116
	background-color #ffbd2e

.titlebar-minimize:active 
	border-color #ad7d15
	background-color #bf9123

.titlebar-fullscreen
	border 1px solid #12ac28
	background-color #28c940

.titlebar-fullscreen:active 
	border-color #128622
	background-color #1f9a31
